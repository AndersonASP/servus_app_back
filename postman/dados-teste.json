    "relatorios": {
      "usuarios_mensal": {
        "name": "Relatório Mensal de Usuários",
        "description": "Visão geral mensal de todos os usuários",
        "type": "users",
        "filters": {
          "userStatus": "active",
          "profileCompleted": true
        },
        "groupBy": "branch",
        "metrics": ["total", "active", "by_role", "by_branch"],
        "visualization": "dashboard"
      },
      "engajamento_trimestral": {
        "name": "Relatório de Engajamento Trimestral",
        "description": "Análise de engajamento dos usuários",
        "type": "engagement",
        "filters": {
          "dateRange": {
            "startDate": "2024-01-01T00:00:00.000Z",
            "endDate": "2024-03-31T23:59:59.999Z"
          }
        },
        "metrics": ["profile_completion", "activity_score", "last_activity"],
        "visualization": "chart"
      }
    },
    "atividades": {
      "login": {
        "activityType": "login",
        "description": "Usuário fez login no sistema",
        "metadata": {
          "ipAddress": "192.168.1.100",
          "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
        }
      },
      "profile_update": {
        "activityType": "profile_update",
        "description": "Usuário atualizou informações do perfil",
        "metadata": {
          "fieldsUpdated": ["bio", "skills", "availability"],
          "previousValues": {
            "bio": "Músico",
            "skills": ["Música"]
          }
        }
      },
      "ministry_join": {
        "activityType": "ministry_join",
        "description": "Usuário se juntou a um ministério",
        "metadata": {
          "ministryName": "Ministério de Música",
          "role": "volunteer",
          "invitedBy": "lider@igreja.com"
        }
      },
      "event_participation": {
        "activityType": "event_participation",
        "description": "Usuário participou de um evento",
        "metadata": {
          "eventName": "Ensaio de Louvor",
          "eventDate": "2024-01-15T19:00:00.000Z",
          "duration": "120",
          "location": "Auditório Principal"
        }
      }
    },
    "filtros_comuns": {
      "por_periodo": {
        "dateRange": {
          "startDate": "2024-01-01T00:00:00.000Z",
          "endDate": "2024-12-31T23:59:59.999Z"
        }
      },
      "por_role": {
        "roles": ["leader", "volunteer"]
      },
      "por_status": {
        "userStatus": "active"
      },
      "por_perfil": {
        "profileCompleted": true
      },
      "por_habilidades": {
        "skills": ["Música", "Canto", "Violão"]
      }
    },
    "exemplos_exportacao": {
      "usuarios_por_role": {
        "endpoint": "/users/tenants/{{tenant_id}}/by-role/leader/export",
        "format": "xlsx",
        "query": "?format=xlsx&search=joão"
      },
      "dashboard_tenant": {
        "endpoint": "/users/tenants/{{tenant_id}}/dashboard/export",
        "format": "xlsx"
      },
      "voluntarios_ministry": {
        "endpoint": "/users/tenants/{{tenant_id}}/ministries/{{ministry_id}}/volunteers/export",
        "format": "csv",
        "query": "?format=csv&branchId={{branch_id}}"
      }
    },
    "configuracoes_cache": {
      "ttl_padrao": 300,
      "ttl_dashboard": 300,
      "ttl_metricas": 3600,
      "max_keys": 1000
    },
    "permissoes_por_role": {
      "servus_admin": {
        "description": "Acesso total ao sistema",
        "endpoints": ["todos"],
        "limites": ["nenhum"]
      },
      "tenant_admin": {
        "description": "Administra todo o tenant",
        "endpoints": [
          "usuarios/*",
          "branches/*",
          "relatorios/*",
          "metricas/*"
        ],
        "limites": ["apenas seu tenant"]
      },
      "branch_admin": {
        "description": "Administra sua branch",
        "endpoints": [
          "usuarios/branch/*",
          "relatorios/branch/*",
          "metricas/branch/*"
        ],
        "limites": ["apenas sua branch"]
      },
      "leader": {
        "description": "Lidera ministérios",
        "endpoints": [
          "usuarios/ministry/*",
          "relatorios/ministry/*"
        ],
        "limites": ["apenas seus ministérios"]
      },
      "volunteer": {
        "description": "Usuário básico",
        "endpoints": [
          "perfil/*",
          "notificacoes/*",
          "metricas/pessoal/*"
        ],
        "limites": ["apenas dados pessoais"]
      }
    }
  },
